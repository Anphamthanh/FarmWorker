<div class="container">
  <h1><%= "#{@patient.first_name} #{@patient.last_name}" %></h1>
  <div class="panel panel-info">
    <div class="panel-heading">Patient Information</div>
    <div class="panel-body">      
      <div class="btn-group">
        <button type="button" class="btn btn-default demographics">Demographics</button>
        <button type="button" class="btn btn-default vitals">Vitals</button>
        <button type="button" class="btn btn-default physical">Physical</button>
        <button type="button" class="btn btn-default hearing">Hearing</button>
        <button type="button" class="btn btn-default vision">Vision</button>
        <button type="button" class="btn btn-default assessment">Assessment</button>
      </div>
      <div class="demographics-container show" style="margin-top:1rem;">
        <div class="container">
          <%= form_for(:user, url: admin_register_path, :validate => true, :class => 'form-horizontal') do |f| %>
            <div class="form-group row col-md-8">
              <div class="col-md-5">
                <%= f.label :full_name %>
              </div>
              <div class="col-md-7">
                <%= "#{@patient.first_name} #{@patient.last_name}" %>               
              </div>
            </div>
            <div class="form-group row col-md-8">
              <div class="col-md-5">
                <%= f.label "Date of Birth" %>
              </div>
              <div class="col-md-7">
                <%= @patient.dob.to_date %>
              </div>
            </div>
            <div class="form-group row col-md-8">
              <div class="col-md-5">
                <%= f.label :gender %>
              </div>
              <div class="col-md-7">
                <%= @patient.gender %>
              </div>
            </div>
            <div class="form-group row col-md-8">
              <div class="col-md-5">
                <%= f.label :site_location %>
              </div>
              <div class="col-md-7">
                <%= f.select :role, options_for_select(["Location 1", "Location 2"]) %>
              </div>
            </div>
            <div class="form-group row col-md-8">
              <div class="col-md-5">
                <%= f.label :parental_permission %>
              </div>
              <div class="col-md-7">
                <input type="checkbox" name="parental-permission">
              </div>
            </div>
            <div class="form-group row col-md-8">
              <div class="col-md-5">
                <%= f.label :allergies %>
              </div>
              <div class="col-md-7">
                <textarea placeholder="Allergies" id="user_allergies" class="form-control" rows="3"></textarea>
              </div>
            </div>
            <div class="form-group row col-md-8">
              <div class="col-md-5">
                <%= f.label :reaction_type %>
              </div>
              <div class="col-md-7">
                <textarea placeholder="Reactions" id="reaction_type" class="form-control" rows="3"></textarea>
              </div>
            </div>
            <div class="form-group row col-md-8">
              <div class="col-md-12"> 
                <button type="submit" class="btn btn-primary">Next</button>
              </div>
            </div>

          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>

<script>
  $(".demographics").addClass("active");
</script>