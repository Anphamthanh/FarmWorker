<!DOCTYPE html>
<html>
<head>
  <title>FarmWorker</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class='container'>
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="<%= root_path %>">FarmWorker</a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li><a href="<%= root_path %>">Home</a></li>
          </ul>
          <% if user_signed_in? %>
            <ul class="nav navbar-nav navbar-right">
              <%= link_to destroy_user_session_path, :method => :delete do %>
                <li><i class="fa fa-sign-out fa-2x" style="color:#777;"></i></li>
              <% end %> 
            </ul>
          <% else %>
            <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "navbar-form navbar-right", :role => "form"}) do |f| %>
              <div class="form-group">
                <input name="user[username]" type="text" placeholder="Username" class="form-control">
              </div>
              <div class="form-group">
                <input name="user[password]" type="password" placeholder="Password" class="form-control">
              </div>
              <button type="submit" class="btn btn-success">Sign in</button>
              <% if devise_mapping.rememberable? %>
                <div class="form-group">
                  <div class="checkbox">
                      <label><input type="checkbox"> Remember me</label>
                  </div>
                </div>
              <% end %>
            <% end %>
          <% end %>
          
        </div>
      </div>
    </div>
    <div class="main">
      <div class="container">      
        <% if notice %>
          <p class="alert alert-warning"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>
      </div>
      <%= yield %>
    </div>
  </div>

</body>
</html>
