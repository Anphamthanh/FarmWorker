<!DOCTYPE html>
<html>
<head>
  <title>FarmWorker</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class='container'>
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <a class="navbar-brand" style="margin: -10px;"><%= image_tag "/assets/FarmWorkerLogo.png" %></a>
      <%= link_to("FarmWorker", root_path, class: "navbar-brand") %>
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <% if current_page?(root_path) %>
            <% if user_signed_in? %>
            <%= link_to("Admin", admin_dashboard_path, class: "btn btn-default navbar-btn") %>
            <% end %>
          <% else %> 
            <% if current_user.role.downcase == "admin" %>
              <%= link_to("Admin", admin_dashboard_path, class: "btn btn-default navbar-btn") %>
            <% elsif current_user.role.downcase == "student-bsn" %>
              <%= link_to("Student", student_dashboard_path, class: "btn btn-default navbar-btn") %>
            <% end %>
            <%= link_to("Reports", "/report/index/0" , class: "btn btn-default navbar-btn") %>
            <% if current_user.role.downcase != "admin" %>              
              <%= link_to("Patient", student_dashboard_path, class: "btn btn-default navbar-btn") %>
            <% end %>
          <% end %>
        </div>
        <div class="navbar-collapse collapse">
          <% if user_signed_in? %>
            <div class="navbar-form navbar-right">
              <%= link_to destroy_user_session_path, :method => :delete do %>
              <button type="submit" class="btn btn-success">Sign Out</button>
              <% end %> 
            </div>
          <% else %>
            <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "navbar-form navbar-right", :role => "form"}) do |f| %>
              <div class="form-group">
                <input name="user[username]" type="text" placeholder="Username" class="form-control">
              </div>
              <div class="form-group">
                <input name="user[password]" type="password" placeholder="Password" class="form-control">
              </div>
              <button type="submit" class="btn btn-success">Sign in</button>
              <% if devise_mapping.rememberable? %>
                <div class="form-group">
                  <div class="checkbox">
                      <label><input type="checkbox"> Remember me</label>
                  </div>
                </div>
              <% end %>
            <% end %>
          <% end %>
          
        </div>
      </div>
    </div>
    <div class="main">
      <div class="container">      
        <% if notice %>
          <p class="alert alert-warning"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>
      </div>
      <%= yield %>
    </div>
  </div>

</body>
</html>
